<% provide(:title, 'お問い合わせフォーム') %>
<h1>お問い合わせフォーム</h1>

<div class="row">
    <div class="span12 offset4">
        <%= form_for(@contact) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
           
          <%= f.label '名前' %>
          <%= f.text_field :name %>
          
          <%= f.label :Email %>
          <%= f.text_field :email %>
          
          <%= f.label 'お問い合わせ内容' %>
          <%= f.text_field :content %>
          
          <%= f.submit '送信します', class: "btn btn-large btn-primary", data: { confirm: "本当によろしいですか？" } %>
        
        <% end %>
    </div>
</div>