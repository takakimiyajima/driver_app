<% provide(:title, "Edit DriverPost") %>
<h1>ドライバーポストを編集しよう！</h1>


<div class="row">
  <aside class="col-md-4">
  </aside>

    <%= form_for(@driver_post) do |f| %>
      <div class="col-md-4">
        
        <%= render 'shared/error_messages', object: f.object %>
        
        <div class="field">
          <%= f.label :'出発地', class: "control-label" %>
          <%= f.text_field :origin, autofocus: true, class: "form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :'目的地', class: "control-label" %>
          <%= f.text_field :destination, autofocus: true, class: "form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :'日程', class: "control-label" %>
          <%= f.text_field :departure_date, autofocus: true, class: "form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :'コメント', class: "control-label" %>
          <%= f.text_area :content, autofocus: true, class: "form-control" %>
        </div>
        
        <div class="actions">
          <%= f.submit "保存", class: "btn btn-lg btn-primary" %>
        </div>
      </div>
    <% end %> 
</div>