<%= form_for(@driver_post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :origin, placeholder: "出発地入れてください" %><br/>
    <%= f.text_field :destination, placeholder: "目的地を入れてください" %><br/>
  </div>
  
  <div class='input-group date datepicker'>
    <%= f.text_field :departure_date, class: 'form-control'%>
      <span class="input-group-addon">
         <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
      </span>
  </div> 
  
  <div class="field">
    <%= f.text_area :content, placeholder: "備考欄" %><br/>
  </div>
  
  
  
    <%= f.submit "Post", class: "btn btn-lg btn-primary" %>
<% end %>