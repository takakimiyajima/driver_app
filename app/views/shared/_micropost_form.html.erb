<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :content, placeholder: "出発地" %><br/>
    <%= f.text_field :content, placeholder: "目的地" %><br/>
    <%= f.text_field :content, placeholder: "日時" %>
    <p>備考欄</p>
    <%= f.text_area :content, placeholder: "経由地 可能な人数 etc..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-lg btn-primary" %>
<% end %>